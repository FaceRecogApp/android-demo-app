<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/main_vision_click_view"
        style="@style/Clickable"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@mipmap/bg_file">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/ic_vision_s"
            android:drawablePadding="16dp"
            android:text="@string/main_vision_button"
            android:textAppearance="@style/TextAppearanceMainVisionNlp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/filecontent"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_vision_click_view"
        tools:ignore="MissingConstraints">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/linearlayout_rount"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="30dp">


            <LinearLayout
                android:id="@+id/local_data"
                android:layout_width="300dp"
                android:layout_height="74dp"
                android:layout_gravity="center_vertical|center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/data_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:text="查看本地数据包文件"
                    android:textSize="10pt"
                    android:textAlignment="center"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/local_video"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_gravity="center_vertical|center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/video_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:text="查看本地视频文件"
                    android:textSize="10pt"
                    android:textAlignment="center"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/checkandupdate_person"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_gravity="center_vertical|center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/checkandupdate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"

                    android:text="查看和更改船员"
                    android:textSize="10pt"
                    android:textAlignment="center"/>


            </LinearLayout>
        </LinearLayout>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
